    <div>
        @Html.AntiForgeryToken()
        <a asp-action="Index" class="btn btn-primary">Назад</a>
        @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Удалить", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
